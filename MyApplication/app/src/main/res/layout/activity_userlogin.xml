<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e3e3e3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登入"
            android:textSize="17dp"
            android:textColor="#888888"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text=""
            android:layout_marginLeft="10dp"
            android:background="@mipmap/loginpage_cancle"
            android:id="@+id/btn_cancle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E2003B"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:layout_marginLeft="5dp"
            android:textColor="#888888"
            android:id="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView9"
            android:background="#E2003B"
            android:layout_toEndOf="@+id/textView9"
            android:layout_marginLeft="10dp"
            android:id="@+id/linearLayout"></LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/editText2"
            android:textSize="12dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/relativeLayout4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E2003B"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:layout_marginLeft="5dp"
            android:textColor="#888888"
            android:id="@+id/textView10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView10"
            android:background="#E2003B"
            android:layout_toEndOf="@+id/textView10"
            android:layout_marginLeft="10dp"
            android:id="@+id/linearLayout1"></LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/editText3"
            android:textSize="12dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:password="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearLayout1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:text="登入"
        android:id="@+id/btn_Login"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:background="@drawable/userlogin_btn_bg"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="注册"
        android:id="@+id/btn_resgiter"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:textSize="12dp"
        android:textColor="#888888"
        android:layout_below="@+id/btn_Login"
        android:layout_centerHorizontal="true" />


</RelativeLayout>