<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e3e3e3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="17dp"
            android:textColor="#888888"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/loginpage_cancle"
            android:id="@+id/btn_cancle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginTop="41dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#E2003B"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"></RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:layout_marginLeft="5dp"
                    android:textColor="#555555"
                    android:id="@+id/textView9"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView9"
                    android:background="#E2003B"
                    android:layout_toEndOf="@+id/textView9"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/linearLayout"></LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/edit_userName"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:textColor="#888888"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="请输入账号" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#E2003B"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"></RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:layout_marginLeft="5dp"
                    android:textColor="#555555"
                    android:id="@+id/textView10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView10"
                    android:background="#E2003B"
                    android:layout_toEndOf="@+id/textView10"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/linearLayout10"></LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/edit_NikeName"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:textColor="#888888"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linearLayout10"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="请输入昵称" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#E2003B"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"></RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:layout_marginLeft="5dp"
                    android:textColor="#555555"
                    android:id="@+id/textView11"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView11"
                    android:background="#E2003B"
                    android:layout_toEndOf="@+id/textView11"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/linearLayout10"></LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/edit_pw"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:password="true"
                    android:textColor="#888888"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linearLayout10"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="请输入密码" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#E2003B"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"></RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:layout_marginLeft="5dp"
                    android:textColor="#555555"
                    android:id="@+id/textView12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView12"
                    android:background="#E2003B"
                    android:layout_toEndOf="@+id/textView12"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/linearLayout11"></LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/edit_confirm"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:textColor="#888888"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:password="true"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linearLayout11"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="请重新输入密码" />
            </RelativeLayout>


            <Button
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:text="注册"
                android:id="@+id/btn_Register"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:background="@drawable/userlogin_btn_bg"
                android:layout_below="@+id/relativeLayout4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>