<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    -- 최신 이야기 --   "
            android:id="@+id/textView2"
            android:textSize="13dp"
            android:textColor="#FC1573"
            android:background="#ffffff"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/img_title"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"

            android:layout_height="150dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imageView_top"
                android:background="#eeeeee"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

            <!-- 最大的图片-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#99333333"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="시간은 너의 곁으로"
                android:id="@+id/textView_top"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


        <!-- 小内容 1 -->
        <RelativeLayout
            android:id="@+id/img_content1"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:layout_height="68dp">

            <!-- Data Lable-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012-01-01"
                android:id="@+id/textHeader_time1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="11dp"
                android:textColor="#888888"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:textIsSelectable="true" />


            <!-- Right ImageView-->
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="#e3e3e3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imageView_top1"
                    android:background="#eeeeee"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>

            </RelativeLayout>

            <!-- Title Lable-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실화 그녀와 함께"
                android:id="@+id/textHeader_title1"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/relativeLayout"
                android:layout_toEndOf="@+id/relativeLayout" />

        </RelativeLayout>



        <!-- 小内容 2 -->
        <RelativeLayout
            android:id="@+id/img_content2"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:layout_height="68dp">

            <!-- Data Lable-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012-01-01"
                android:id="@+id/textHeader_time2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="11dp"
                android:textColor="#888888"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:textIsSelectable="true" />


            <!-- Right ImageView-->
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="#e3e3e3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout1">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imageView_top2"
                    android:background="#eeeeee"
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>

            </RelativeLayout>

            <!-- Title Lable-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실화 그녀와 함께"
                android:id="@+id/textHeader_title2"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/relativeLayout1"
                android:layout_toEndOf="@+id/relativeLayout1" />

        </RelativeLayout>



        <!-- 小内容 3 -->
        <RelativeLayout
            android:id="@+id/img_content3"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:layout_height="68dp">

            <!-- Data Lable-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012-01-01"
                android:id="@+id/textHeader_time3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="11dp"
                android:textColor="#888888"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:textIsSelectable="true" />


            <!-- Right ImageView-->
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="#e3e3e3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout2">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imageView_top3"
                    android:background="#eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="fill"/>

            </RelativeLayout>

            <!-- Title Lable-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실화 그녀와 함께"
                android:id="@+id/textHeader_title3"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/relativeLayout2"
                android:layout_toEndOf="@+id/relativeLayout2" />

        </RelativeLayout>


    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    -- 지난 이야기 --   "
            android:id="@+id/textView22"
            android:textSize="13dp"
            android:textColor="#FC1573"
            android:background="#ffffff"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </LinearLayout>

</LinearLayout>
